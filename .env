# Container Configuration
CONTAINER_NAME=lamp-dev

# Port Mapping
HTTP_PORT=80
HTTPS_PORT=443
SSH_PORT=2222

# SSH Access
# Set a strong password for root user
ROOT_PASSWORD=changeme

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=mydb
MYSQL_USER=dbuser
MYSQL_PASSWORD=dbpass

# PHP Settings (Applied to all PHP versions)
# These can be overridden per version in conf/php/php-X.X.ini
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=128M
PHP_POST_MAX_SIZE=128M
